{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "*://developer.mozilla.org/*",
    "webRequest"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.90sky.com/*"],
      "js": ["jquery-3.3.1.min.js", "borderify.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }

}